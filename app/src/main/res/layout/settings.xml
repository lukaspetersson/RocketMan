<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">
<Spinner
    android:id="@+id/soundEffect"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:spinnerMode="dropdown"
    android:paddingEnd="24dp"
    android:paddingStart="24dp"
    android:paddingTop="24dp"
    />
<ScrollView
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:id="@+id/settings_layout"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/input_one"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/paramWater"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Mass of water(kg)"
            android:maxLength="10"
            android:singleLine="true"
            android:inputType="numberDecimal"
            android:drawableStart="@drawable/baseline_tune_black_24"
            />

    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/input_two"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/paramRocket"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Mass of empty rocket(kg)"
            android:maxLength="10"
            android:singleLine="true"
            android:inputType="numberDecimal"
            android:drawableStart="@drawable/baseline_tune_black_24"
            />

    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/input_burned"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/paramPressure"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Pressure(psi)"
            android:maxLength="10"
            android:inputType="numberDecimal"
            android:drawableStart="@drawable/baseline_tune_black_24"
            />
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/input_lyre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/paramDensity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Density of fluid(kg/m3)"
            android:maxLength="10"
            android:inputType="numberDecimal"
            android:drawableStart="@drawable/baseline_tune_black_24"
            />
    </com.google.android.material.textfield.TextInputLayout>

    </LinearLayout>

</ScrollView>

</LinearLayout>